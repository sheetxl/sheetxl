{
  "extends": "./tsconfig.base.json",

  "include": [
    // "./packages/**/src/**/*",
    // "./packages/**/src/.generated/**/*"
  ],
  "exclude": ["**.test.**", "**/__tests__/**"],
  "compilerOptions": {
    "outDir": "./build/tsdocs",
    "emitDeclarationOnly": true, // âœ… Prevents JavaScript output (no .js files)
    "stripInternal": true, // Optional: Exclude @internal types from docs

    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true, // isn't helping
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "allowImportingTsExtensions": false,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "tsBuildInfoFile": "./build/.tsbuildinfo",
    "baseUrl": "./",
  },
  "files": [], // Important: This tells TypeScript not to compile any files directly in the root
  "references": [
  ]
}